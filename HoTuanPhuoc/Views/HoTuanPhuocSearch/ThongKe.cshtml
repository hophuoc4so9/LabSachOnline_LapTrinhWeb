@model IEnumerable<HoTuanPhuoc.Models.ReportInfo>

@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h2>Thống kê số đầu sách theo chủ đề</h2>

<table border="1">
    <thead>
        <tr style="background-color:burlywood; font-weight:bold;">
            <th>Mã Chủ Đề</th>
            <th>Số Đầu Sách</th>
            <th>Tổng Số Lượng Bán</th>
            <th>Số Lượng Bán Cao Nhất</th>
            <th>Số Lượng Bán Thấp Nhất</th>
            <th>Số Lượng Bán Trung Bình</th>
        </tr>
    </thead>
    <tbody>
        @foreach (HoTuanPhuoc.Models.ReportInfo item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Count</td>
                <td>@item.Sum</td>
                <td>@item.Max</td>
                <td>@item.Min</td>
                <td>@item.Avg</td>
            </tr>
        }
    </tbody>
</table>