@model IEnumerable<IGrouping<int?, HoTuanPhuoc.Models.SACH>>

@{
    ViewBag.Title = "Group";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div>
            <h4 style="font-weight:bold;color:red">Mã chủ đè: @item.Key</h4>
            <table border="1">
                <tr style="background-color:burlywood;font-weight:bold">
                    <td>Mã sách</td>
                    <td>Tên sách</td>
                    <td>Tên chủ đề</td>
                </tr>
                @foreach (HoTuanPhuoc.Models.SACH sach in item)
                {
                    <tr>
                        <td>
                            @sach.MaSach
                        </td>
                        <td>
                            @sach.TenSach
                        </td>
                        <td>
                            @sach.CHUDE.TenChuDe
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
}
