@model HoTuanPhuoc.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<style type="text/css">
    body {
        font-family: Arial, sans-serif;
    }

    table {
        width: 50%;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
    }

    h4 {
        color: red;
        text-align: center;
    }

    tr {
        height: 40px;
    }

    td {
        padding: 10px;
        text-align: left;
    }

    input[type="text"], input[type="password"], input[type="date"], input[type="email"] {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="submit"], input[type="reset"] {
        width: 45%;
        padding: 10px;
        margin: 10px 5px;
        border: none;
        border-radius: 4px;
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }

    input[type="reset"] {
        background-color: #f44336;
    }

        input[type="submit"]:hover, input[type="reset"]:hover {
            opacity: 0.8;
        }
</style>
<h4>@ViewBag.ThongBao</h4>
<table>
    <h2>ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(false)
<tr>
    <td>Họ tên:</td>
    <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
    @*@Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Tên đăng nhập:</td>
    <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
    @*@Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Mật khẩu:</td>
    <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
    @*@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Nhập khẩu nhập lại:</td>
    <td>@Html.Password("NhapLaiMatKhau") @ViewData["err4"]</td>
    @*@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Email:</td>
    <td>@Html.TextBox("Email") @ViewData["err5"]</td>
    @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Điện thoại:</td>
    <td>@Html.TextBox("DienThoai")</td>
    @*@Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })*@

</tr>
<tr>
    <td>Ngày sinh:</td>
    <td><input type="date" name="NgaySinh" /></td>
    @*@Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })*@

</tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
            @*@Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })*@

        </tr>
        <tr>
            <td colspan="2" style="text-align:center;">
                <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
    }
</table>
