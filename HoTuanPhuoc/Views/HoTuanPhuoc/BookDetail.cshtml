@model HoTuanPhuoc.Models.SACH

@{
    ViewBag.Title = "BookDetail";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h2>Chi tiết sách</h2>


    <h4> @Model.TenSach </h4>
    <hr />
    <div class="text-center mb-4">
        <img src="~/Images/@Model.AnhBia" alt="Thumbnail Image 1" class="img-fluid img-thumbnail" style="max-width:400px;">
    </div>

    <dl class="row">
        <dt class="col-sm-3">
Tên sách
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt class="col-sm-3">
           Mô tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt class="col-sm-3">
        Ngày cập nhật
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt class="col-sm-3">
           Số lượng bán
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SoLuongBan)
        </dd>

        <dt class="col-sm-3">
           Giá bán
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>

        <dt class="col-sm-3">
          Tên chủ đề
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CHUDE.TenChuDe)
        </dd>

        <dt class="col-sm-3">
           Tên nhà xuất bản
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
        </dd>
    </dl>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.MaSach }, new { @class = "btn btn-primary" }) 
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </div>

