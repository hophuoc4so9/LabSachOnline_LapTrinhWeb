@model HoTuanPhuoc.Models.SACH

@{
    ViewBag.Title = "BookDetail";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h2>Chi tiết sách</h2>


<h4 class="sach-title"> @Model.TenSach </h4>
<hr />
<div class="text-center mb-4">
    <img src="~/Images/@Model.AnhBia" alt="Thumbnail Image 1" class="img-fluid img-thumbnail" style="max-width:300px;">
</div>


<div>
    @Html.Raw(Model.MoTa.ToString().Replace("\n", "<br>"))
</div>
<div class="centered-container">

    <div class="centered-text">
        Ngày cập nhật: @Html.FormatValue(Model.NgayCapNhat, "{0:dd/MM/yyyy}")
    </div>
</div>

<div class="centered-text">
    Giá bán: <span class="text-primary font-size giaban">  @Html.FormatValue(Model.GiaBan, "{0:#,##0} VNĐ")</span>
</div>


<div class="mt-3 centered-text">
    @Html.ActionLink("Add to Cart", "Edit", new { id = Model.MaSach }, new { @class = "btn btn-primary" })

</div>

@section BinhLuan{
    @Html.Action("_PartialBinhLuan", "HoTuanPhuoc", new { maSach = Model.MaSach })

}
<style>
    .centered-text {
        text-align: center;
        padding-left: 50%;
    }

    .giaban {
        font-size: 20px;
        font-weight: bold;
    }

    .sach-title {
        color: red;
        font-weight: bold;
        text-align: center;
        background: linear-gradient(#66D3FA, white);
    }
</style>
