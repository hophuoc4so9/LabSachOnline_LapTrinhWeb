@model HoTuanPhuoc.Models.TRANGTIN

@{
    ViewBag.Title = "TrangTin";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@if (Model != null)
{
    <h3>@(Model.TenTrang ?? " ")</h3>
    <h5>Ngày đăng:  @Html.FormatValue(@Model.NgayTao, "{0:dd/MM/yyyy}")</h5>


    <hr />
    <div>
        @Html.Raw(Model.NoiDung)

    </div>
    <br />
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>

}
else
{
    <p>Chưa có nội dung cho trang</p>
}