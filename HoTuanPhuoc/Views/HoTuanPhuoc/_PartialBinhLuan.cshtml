@model IEnumerable<HoTuanPhuoc.Models.BinhLuan>
@{
    var maSach = ViewBag.MaSach; // Assuming MaSach is passed via ViewBag
}
<div class="col-12">

    <section >

        <div class="container my-5 py-5" style="background-color: #eee;">
            <div class="row d-flex justify-content-center">
                <h1>Bình luận </h1>
                <div class="col-md-12 col-lg-10 col-xl-8">
                    <div class="card">
                        @if (Model.Count() == 0)
                        {
                            <h2>Chưa có bình luận nào</h2>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <div class="card-body">
                                    <div class="d-flex flex-start align-items-center">

                                        <div>
                                            <h6 class="fw-bold text-primary mb-1" style="font-size:20px">
                                                @item.KHACHHANG.HoTen -   <span class="text-muted small mb-0"  style="font-size:18px">
                                                    @Html.FormatValue(@item.NgayTao, "{0:dd/MM/yyyy}")
                                                </span>
                                            </h6>

                                        </div>
                                    </div>

                                    <p class="mt-3 mb-4 pb-2">
                                        @item.NoiDung
                                    </p>


                                </div>
                            }
                        }

                        @if (Session["Taikhoan"] == null)
                        {
                            <h2>Đăng nhập để bình luận </h2>
                        }
                        else
                        {


                            using (Html.BeginForm("ThemMoiBinhLuan", "HoTuanPhuoc", FormMethod.Post))
                            {
                                <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                                    <div class="d-flex flex-start w-100">
                                        <label class="form-label" for="textAreaExample">Bình luận</label>
                                        <div data-mdb-input-init class="form-outline w-100">
                                            <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
                                            <textarea class="form-control" id="textAreaExample" rows="4" style="background: #fff;" name="NoiDung"></textarea>
                                            <input type="hidden" name="MaSach" value="@ViewBag.MaSach" />
                                        </div>
                                    </div>
                                    <div class="float-end mt-2 pt-1">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-sm">Bình luận</button>
                                    </div>
                                </div>
                            }


                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>


</script>