<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>SachONlie - @ViewBag.title</title>




    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>


</head>
<body>


    @Html.Action("PartialNav", "HoTuanPhuoc", new {area=""})
    <div class="container">
        @Html.Action("_PartialCarousel", "HoTuanPhuoc", new { area = "" })
      
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

                @Html.Action("PartialChuDe", "HoTuanPhuoc", new { area = "" })

                <br>
                @Html.Action("_PartialNhaXuatBan", "HoTuanPhuoc", new { area = "" })


            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">

                @RenderBody()
            </div>
            <hr>
        </div>
        </div>
    <!-- /.container-->
    @RenderSection("sachbannhieu", required: false)
    <!-- /.container-->

    @Html.Action("_PartialFooter", "HoTuanPhuoc", new { area = "" })
   
</body>
</html>

